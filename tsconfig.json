{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2020", "es2019", "es2018", "es2017", "es7", "es6"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true ,
    "declaration": true,

    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "paths": {
      "@constants/*": [
        "./src/constants/*"
      ],
      "@enums": [
        "./src/enums"
      ],
      "@enums/*": [
        "./src/enums/*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@services": [
        "./src/services"
      ]
    },
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}